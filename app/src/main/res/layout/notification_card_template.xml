<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp">

        <TextView
                android:id="@+id/notification_description_text_view"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Congratulations! You had became new member of Blink Blink Beach!"
                android:drawablePadding="10dp"
                android:layout_toStartOf="@id/notification_date_text_view"
                android:layout_marginEnd="7dp"
                app:drawableStartCompat="@drawable/ic_campaign_icon" />

        <TextView
                android:id="@+id/notification_date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/seed"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                tools:text="01 Jan 2023" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>